{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "../index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}